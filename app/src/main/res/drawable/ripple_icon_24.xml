<?xml version="1.0" encoding="utf-8"?><!-- A red ripple masked against an opaque rectangle. -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorControlHighlight">
    <item
        android:id="@android:id/mask">
        <shape
            android:shape="oval">
            <solid android:color="@color/color_main_light" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
</ripple>