<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCateCover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/text_b8"
            android:src="@drawable/img_category_cover_sample_1"
            app:layout_constraintDimensionRatio="150:100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_cover_category"
            app:layout_constraintBottom_toBottomOf="@+id/ivCateCover"
            app:layout_constraintEnd_toEndOf="@+id/ivCateCover"
            app:layout_constraintStart_toStartOf="@+id/ivCateCover"
            app:layout_constraintTop_toTopOf="@+id/ivCateCover" />

        <TextView
            android:id="@+id/tvCateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Category Name"
            android:textColor="@color/text_color_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivCateCover"
            app:layout_constraintEnd_toEndOf="@+id/ivCateCover"
            app:layout_constraintStart_toStartOf="@+id/ivCateCover"
            app:layout_constraintTop_toTopOf="@+id/ivCateCover" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>