<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/mainHomeFragment">
    <fragment
        android:id="@+id/mainHomeFragment"
        android:name="com.s4ltf1sh.bookstore.ui.main.mainHomeScreen.MainHomeFragment"
        android:label="MainHomeFragment"
        tools:layout="@layout/fragment_main_home">
        <action
            android:id="@+id/action_mainHomeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainHomeFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainRecentFragment"
        android:name="com.s4ltf1sh.bookstore.ui.main.mainRecentScreen.MainRecentFragment"
        android:label="MainRecentFragment"
        tools:layout="@layout/fragment_main_recent">
        <action
            android:id="@+id/action_mainRecentFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainRecentFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainCartFragment"
        android:name="com.s4ltf1sh.bookstore.ui.main.mainCartScreen.MainCartFragment"
        android:label="MainCartFragment"
        tools:layout="@layout/fragment_main_cart">
        <action
            android:id="@+id/action_mainCartFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainCartFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainAccountFragment"
        android:name="com.s4ltf1sh.bookstore.ui.main.mainAccountScreen.MainAccountFragment"
        android:label="MainAccountFragment"
        tools:layout="@layout/fragment_main_account">
        <action
            android:id="@+id/action_mainAccountFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainAccountFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.s4ltf1sh.bookstore.ui.searchScreen.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.s4ltf1sh.bookstore.ui.detailScreen.BookDetailFragment"
        android:label="BookDetailFragment"
        tools:layout="@layout/fragment_book_detail" />
</navigation>