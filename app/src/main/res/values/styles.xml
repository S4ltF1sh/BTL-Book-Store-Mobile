<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="body_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="h2_highlight_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_main_dark</item>
        <item name="fontFamily">@font/app_font_bold</item>
    </style>

    <style name="cta_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_cta_button</item>
    </style>

    <style name="button_style_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="fontFamily">@font/app_font_medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/background_button_normal</item>
    </style>

    <style name="text_button_dark">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_button_dark</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_dark</item>
    </style>

    <style name="text_button_light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_button_light</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_light</item>
    </style>

    <style name="text_title_fragment">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_title_search">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="text_title_book_types">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="button_header">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/ripple_icon_48</item>
    </style>

    <style name="button_header_search">
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/ripple_icon_32</item>
    </style>

    <style name="button_icon_default">
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/ripple_icon_32</item>
    </style>

    <style name="text_input">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="shape_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="shape_rounded_8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_main_dark</item>
    </style>
</resources>